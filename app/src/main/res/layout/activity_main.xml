<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="5dp"
    android:translationY="20dp">


    <RelativeLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="721dp"
        android:background="#00FFFFFF"
        android:translationY="-25dp"
        android:visibility="visible">


        <LinearLayout
            android:id="@+id/addressContainer"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#00FFFFFF"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:text="DHAKA, BD"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/updated_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:text="20 April 2012, 20:08 PM"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/overviewContainer"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="-64dp"
            android:background="#00FFFFFF"
            android:orientation="vertical"
            android:translationY="-100dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:text="Theme"
                android:translationY="0dp" />

            <Switch
                android:id="@+id/themeSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:minWidth="48dp"
                android:minHeight="48dp"
                tools:translationX="0dp" />

            <Button
                android:id="@+id/changeDegBtn"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="C|F"
                android:textColor="#000000"
                android:textSize="11sp"
                android:translationX="0dp"
                android:translationY="40dp"
                app:backgroundTint="#FFFFFF"
                app:iconPadding="0dp" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#00FFFFFF"
                android:text="Clear Sky"
                android:textSize="14sp"
                android:translationY="-100dp" />

            <TextView
                android:id="@+id/temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-thin"
                android:paddingTop="-10dp"
                android:text="29°F"
                android:textSize="70sp"
                android:translationY="-100dp" />

            <TextView
                android:id="@+id/feels_like_txt"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="#00FFFFFF"
                android:text="Feels Like: "
                android:textSize="12sp"
                android:translationX="150dp"
                android:translationY="-115dp" />

            <TextView
                android:id="@+id/feels_like"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="0"
                android:background="#00FFFFFF"
                android:text="27°C"
                android:textSize="12sp"
                android:translationX="210dp"
                android:translationY="-155dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="136dp"
                android:background="#00FFFFFF"
                android:gravity="center"
                android:orientation="horizontal">

                <Space
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:translationX="25dp" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/detailsContainer"
            android:layout_width="match_parent"
            android:layout_height="407dp"
            android:layout_alignParentBottom="true"
            android:background="#00FFFFFF"
            android:orientation="vertical"
            android:translationY="-65dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#00FFFFFF"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:translationX="0dp"
                android:translationY="45dp"
                android:weightSum="3">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="10dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:background="#3CF1EBF1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="0dp"
                    android:translationX="5dp"
                    android:translationY=".75dp">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00FFFFFF"
                        android:text="Min Temp"
                        android:textAlignment="center"
                        android:textSize="11sp"
                        android:translationY="0dp" />

                    <ImageView
                        android:id="@+id/imageView15"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:background="#00FFFFFF"
                        app:srcCompat="@drawable/min_temp_alpha_black1" />

                    <TextView
                        android:id="@+id/min_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:background="#00FFFFFF"
                        android:gravity="center_horizontal"
                        android:text="05:05 AM"
                        android:textAlignment="center"
                        android:textSize="11sp"
                        android:translationY="0dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:background="#3CF1EBF1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="0dp"
                    android:translationX="5dp"
                    android:translationY=".75dp">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00FFFFFF"
                        android:text="Max Temp"
                        android:textAlignment="center"
                        android:textSize="11sp" />

                    <ImageView
                        android:id="@+id/imageView16"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:background="#00FFFFFF"
                        app:srcCompat="@drawable/max_temp_alpha_black4" />

                    <TextView
                        android:id="@+id/max_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00FFFFFF"
                        android:text="05:05 AM"
                        android:textSize="11sp"
                        tools:layout_height="18dp" />
                </LinearLayout>

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#00FFFFFF"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:translationX="0dp"
                android:translationY="35dp"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:background="#3CF1EBF1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="0dp"
                    android:translationX="5dp"
                    android:translationY=".75dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00FFFFFF"
                        android:text="Sunrise"
                        android:textSize="11sp" />

                    <ImageView
                        android:id="@+id/imageView17"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:background="#00FFFFFF"
                        app:srcCompat="@drawable/sunrise_alpha_black1" />

                    <TextView
                        android:id="@+id/sunrise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00FFFFFF"
                        android:text="06:40 AM"
                        android:textSize="11sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:background="#3CF1EBF1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="0dp"
                    android:translationX="5dp"
                    android:translationY=".75dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00FFFFFF"
                        android:text="Sunset"
                        android:textSize="11sp" />

                    <ImageView
                        android:id="@+id/imageView18"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:background="#00FFFFFF"
                        app:srcCompat="@drawable/sunset_alpha_black1" />

                    <TextView
                        android:id="@+id/sunset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00FFFFFF"
                        android:text="06:40 AM"
                        android:textSize="11sp" />
                </LinearLayout>

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#00FFFFFF"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:translationX="0dp"
                android:translationY="25dp"
                android:weightSum="3">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_weight="0" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:background="#3CF1EBF1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="0dp"
                    android:translationX="5dp"
                    android:translationY=".5dp">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00FFFFFF"
                        android:text="Wind Speed"
                        android:textAlignment="center"
                        android:textSize="11sp" />

                    <ImageView
                        android:id="@+id/imageView19"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:background="#00FFFFFF"
                        app:srcCompat="@drawable/wind_alpha_black1" />

                    <TextView
                        android:id="@+id/wind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00FFFFFF"
                        android:text="06:40 AM"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:background="#3CF1EBF1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="0dp"
                    android:translationX="5dp"
                    android:translationY=".5dp">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00FFFFFF"
                        android:text="Humidity"
                        android:textAlignment="center"
                        android:textSize="11sp" />

                    <ImageView
                        android:id="@+id/imageView20"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:background="#00FFFFFF"
                        app:srcCompat="@drawable/humidity_alpha_black1" />

                    <TextView
                        android:id="@+id/humidity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00FFFFFF"
                        android:text="06:40 AM"
                        android:textSize="11sp" />
                </LinearLayout>

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:translationX="0dp"
                android:translationY="5dp"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:background="#3CF1EBF1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="0dp"
                    android:translationX="5dp"
                    android:translationY="-1.5dp">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00FFFFFF"
                        android:text="Pressure"
                        android:textAlignment="center"
                        android:textSize="11sp" />

                    <ImageView
                        android:id="@+id/imageView14"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:background="#00FFFFFF"
                        app:srcCompat="@drawable/pressure2_alpha" />

                    <TextView
                        android:id="@+id/pressure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00FFFFFF"
                        android:text="06:40 AM"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:background="#3CF1EBF1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="0dp"
                    android:translationX="5dp"
                    android:translationY="-1.5dp">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00FFFFFF"
                        android:text="Cloudiness"
                        android:textAlignment="center"
                        android:textSize="11sp" />

                    <ImageView
                        android:id="@+id/imageView21"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:background="#00FFFFFF"
                        app:srcCompat="@drawable/cloudiness_alpha_black1" />

                    <TextView
                        android:id="@+id/clouds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00FFFFFF"
                        android:text="06:40 AM"
                        android:textSize="11sp" />
                </LinearLayout>

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <EditText
            android:id="@+id/cityString"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/overviewContainer"
            android:layout_marginBottom="60dp"
            android:ems="10"
            android:hint="City,Country code (optional)"
            android:inputType="textPersonName"
            android:translationX="20dp"
            android:translationY="-40dp" />

        <Button
            android:id="@+id/goSearchBut"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/overviewContainer"
            android:layout_marginBottom="60dp"
            android:text="Search"
            android:translationX="273dp"
            android:translationY="-40dp" />

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/errorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Something went wrong"
        android:visibility="gone" />


</LinearLayout>